<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="350.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group8.gymfitnesscenter.Lamia.Member.LoginController">

    <children>
        <VBox spacing="12" layoutX="50" layoutY="40" prefWidth="250">

            <Label text="Member Login"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />

            <Button text="Login"
                    onAction="#handleLogin"
                    style="-fx-background-color: #0d6efd; -fx-text-fill: white; -fx-font-size: 16px;" />

            <Label fx:id="statusLabel" textFill="red" />

        </VBox>
    </children>
</AnchorPane>
