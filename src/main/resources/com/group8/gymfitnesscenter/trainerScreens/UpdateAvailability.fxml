<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group8.gymfitnesscenter.Lamia.Trainer.UpdateAvailabilityController">


    <Label layoutX="180.0" layoutY="20.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Update Availability" />


    <Label layoutX="50.0" layoutY="80.0" text="Select Day:" />
    <ComboBox fx:id="dayComboBox" layoutX="150.0" layoutY="75.0" prefWidth="150.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Monday" />
                <String fx:value="Tuesday" />
                <String fx:value="Wednesday" />
                <String fx:value="Thursday" />
                <String fx:value="Friday" />
                <String fx:value="Saturday" />
                <String fx:value="Sunday" />
            </FXCollections>
        </items>
    </ComboBox>


    <Label layoutX="50.0" layoutY="130.0" text="Time Slot (e.g., 10:00-11:00):" />
    <TextField fx:id="slotField" layoutX="239.0" layoutY="125.0" prefWidth="180.0" />
    <Button layoutX="48.0" layoutY="345.0" onAction="#handleAddSlot" text="Add Slot" />


    <Label layoutX="50.0" layoutY="180.0" text="Available Slots:" />
    <TableView fx:id="scheduleTable" layoutX="50.0" layoutY="210.0" prefHeight="120.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Trainer Name" />
            <TableColumn fx:id="dayColumn" prefWidth="150.0" text="Day" />
            <TableColumn fx:id="slotColumn" prefWidth="200.0" text="Time Slot" />
        </columns>
    </TableView>


    <Label fx:id="statusLabel" layoutX="200.0" layoutY="350.0" style="-fx-text-fill: red;" />
   <Button layoutX="451.0" layoutY="38.0" mnemonicParsing="false" onAction="#goBackk" prefHeight="27.0" prefWidth="77.0" text="back" />

</AnchorPane>
