<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group8.gymfitnesscenter.Lamia.Trainer.ConductSessionController">


    <Label layoutX="180.0" layoutY="20.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Conduct Training Session" />


    <TableView fx:id="sessionTable" layoutX="50.0" layoutY="70.0" prefHeight="200.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="memberColumn" prefWidth="180" text="Member Name" />
            <TableColumn fx:id="dayColumn" prefWidth="160" text="Day" />
            <TableColumn fx:id="slotColumn" prefWidth="160" text="Time Slot" />
            <TableColumn fx:id="attendanceColumn" prefWidth="100" text="Attended" />
        </columns>
    </TableView>


    <Button layoutX="50.0" layoutY="290.0" onAction="#handleMarkAttendance" prefWidth="150" text="Mark Attendance" />
    <Button layoutX="225.0" layoutY="290.0" onAction="#handleCompleteSession" prefWidth="150" text="Complete Session" />


    <Label fx:id="statusLabel" layoutX="50.0" layoutY="340.0" style="-fx-text-fill: green;" />
   <Button layoutX="492.0" layoutY="22.0" mnemonicParsing="false" onAction="#goBackk" prefHeight="27.0" prefWidth="77.0" text="back" />

</AnchorPane>
