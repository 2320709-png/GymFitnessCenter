<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="420.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group8.gymfitnesscenter.Lamia.Trainer.ManageClassCapacityController">


    <Label layoutX="190.0" layoutY="20.0" style="-fx-font-size: 24; -fx-font-weight: bold;" text="Manage Class Capacity" />


    <Label layoutX="40.0" layoutY="90.0" text="Select Class:" />
    <ComboBox fx:id="classComboBox" layoutX="150.0" layoutY="85.0" prefWidth="300.0" />


    <Label layoutX="40.0" layoutY="150.0" text="Current Capacity:" />
    <TextField fx:id="capacityField" editable="false" layoutX="180.0" layoutY="145.0" prefWidth="80.0" />


    <Label layoutX="40.0" layoutY="210.0" text="Update Capacity:" />

    <Button layoutX="180.0" layoutY="205.0" onAction="#increaseCapacity" prefWidth="40.0" text="+" />

    <Button layoutX="230.0" layoutY="205.0" onAction="#decreaseCapacity" prefWidth="40.0" text="-" />


    <Button layoutX="40.0" layoutY="320.0" onAction="#saveCapacity" prefWidth="200.0" style="-fx-background-color: #00c853; -fx-text-fill: white;" text="Save Changes" />


    <Label fx:id="statusLabel" layoutX="260.0" layoutY="322.0" style="-fx-text-fill: green; -fx-font-size: 14;" />
   <Button layoutX="515.0" layoutY="32.0" mnemonicParsing="false" onAction="#goBackk" prefHeight="27.0" prefWidth="77.0" text="back" />

</AnchorPane>
