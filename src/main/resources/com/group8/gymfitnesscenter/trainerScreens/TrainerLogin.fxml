<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="450.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group8.gymfitnesscenter.Lamia.Trainer.TrainerLoginController">

    <Label layoutX="150.0" layoutY="20.0"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"
           text="Trainer Login"/>

    <Label layoutX="60.0" layoutY="90.0" text="Email:"/>
    <TextField fx:id="emailField" layoutX="140.0" layoutY="85.0"
               prefWidth="230.0"/>

    <Label layoutX="60.0" layoutY="140.0" text="Password:"/>
    <PasswordField fx:id="passwordField" layoutX="140.0"
                   layoutY="135.0" prefWidth="230.0"/>

    <Button layoutX="140.0" layoutY="200.0" prefWidth="230.0"
            text="Login" style="-fx-background-color: #1565c0; -fx-text-fill: white;"
            onAction="#handleLogin"/>

    <Label fx:id="statusLabel" layoutX="140.0" layoutY="245.0"
           style="-fx-text-fill: red; -fx-font-size: 14px;"/>
</AnchorPane>
